generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  picture   String?
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  content   String
  role      String
  timestamp DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model ChatMessage {
  id             String   @id @default(cuid())
  userId         String
  role           String
  content        String
  createdAt      DateTime @default(now())
  conversationId String

  @@index([userId, conversationId])
}

model Feedback {
  id         String   @id @default(cuid())
  type       String   
  content    String
  userId     String
  userEmail  String
  createdAt  DateTime @default(now())
  status     String   @default("pending") // pending, reviewed, resolved
  adminNotes String?
}


model ChatSession {
  userId         String
  conversationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@id([userId, conversationId])
}
